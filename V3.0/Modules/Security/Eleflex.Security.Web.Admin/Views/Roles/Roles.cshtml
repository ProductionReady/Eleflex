@model Eleflex.Security.Web.Admin.Models.Roles.RolesViewModel
@{
    ViewBag.Title = "Manage Role Roles";
}
<h1>Manage Role Roles</h1>
<div class="container">
    <div class="well">
        @Html.ActionLink("Back to Role", "Edit", new { roleKey = Model.SecurityRoleKey }, new { @class = "btn btn-sm btn-primary", @type = "button" })
        <span><label>Rolename:</label> @(Model.RoleName)</span>
    </div>
    <h2>Assigned Roles</h2>
    @Html.ActionLink("Add New Role", "EditRole", new { roleKey = Model.SecurityRoleKey }, new { @class = "btn btn-primary", @type = "button" })
    <table class="eleflexdatatable">
        <thead>
            <tr>
                <th>Name</th>
                <th>Status</th>
                <th>Start</th>
                <th>End</th>
                <th>Comment</th>
                <th style="width:150px;">Action</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.RoleRoles != null)
            {
                for (int i = 0; i < Model.RoleRoles.Count; i++)
                {
                    <tr>
                        <td>@Model.RoleRoles[i].RoleName</td>
                        <td>@if(Model.RoleRoles[i].Active){<text>Active</text>}else{<text>Inactive</text>}</td>
                        <td>
                            @if(@Model.RoleRoles[i].EffectiveStartDate.HasValue)
                            { @Model.RoleRoles[i].EffectiveStartDate.Value.ToLocalTime().DateTime}
                        </td>
                        <td>
                            @if (@Model.RoleRoles[i].EffectiveEndDate.HasValue)
                            { @Model.RoleRoles[i].EffectiveEndDate.Value.ToLocalTime().DateTime}
                        </td>
                        <td>@Model.RoleRoles[i].Comment</td>
                        <td>
                            @Html.ActionLink("Edit", "EditRole", new { roleKey = Model.SecurityRoleKey, roleRoleKey = Model.RoleRoles[i].SecurityRoleRoleKey }, new { @class = "btn btn-sm btn-primary", @type = "button" })
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>


</div>
<script type="text/javascript">
    $(document).ready(function () {

    });
</script>
